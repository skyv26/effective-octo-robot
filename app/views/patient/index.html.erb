<div class="p-6">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold">Patients</h2>
    <button
      data-action="click->patient#openNewModal"
      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded"
    >
      + Add Patient
    </button>
  </div>

  <%= render 'table', patients: @patients %>
    <ul class="space-y-2 mt-4">
      <li><%= link_to "Dashboard", dashboard_index_path, class: "block p-2 hover:bg-gray-200 rounded active-nav", data: { action: "click->navigation#navigate", navigation_target: "link" } %></li>
      <li><%= link_to "Appointments", dashboard_index_path, class: "block p-2 hover:bg-gray-200 rounded", data: { action: "click->navigation#navigate", navigation_target: "link" } %></li>
      <li><%= link_to "Patients", patient_index_path, class: "block p-2 hover:bg-gray-200 rounded", data: { action: "click->navigation#navigate", navigation_target: "link" } %></li>
      <li><%= link_to "Schedule", dashboard_index_path, class: "block p-2 hover:bg-gray-200 rounded", data: { action: "click->navigation#navigate", navigation_target: "link" } %></li>
      <li><%= link_to "Reports", dashboard_index_path, class: "block p-2 hover:bg-gray-200 rounded", data: { action: "click->navigation#navigate", navigation_target: "link" } %></li>
      <li><%= link_to "Settings", dashboard_index_path, class: "block p-2 hover:bg-gray-200 rounded", data: { action: "click->navigation#navigate", navigation_target: "link" } %></li>
    </ul>
  <!-- Modal -->
  <div
    id="patient-modal"
    class="fixed inset-0 bg-black bg-opacity-50 hidden justify-center items-center z-50"
    data-patient-target="modal"
  >
    <div class="bg-white w-full max-w-2xl p-6 rounded shadow-lg relative">
      <button
        data-action="click->patient#closeModal"
        class="absolute top-2 right-2 text-gray-500 hover:text-red-600"
      >
        âœ•
      </button>

      <h3 class="text-xl font-semibold mb-4" data-patient-target="modalTitle"></h3>
      <div data-patient-target="modalContent">
        <!-- Form will be loaded here dynamically via Turbo or innerHTML -->
      </div>
    </div>
  </div>
</div>
